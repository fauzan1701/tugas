<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:background="#0A1A57">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/download" />

        <ImageView
            android:layout_width="100sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25sp"
            android:layout_centerVertical="true"
            android:src="@drawable/selector1" />


        <TextView
            android:layout_width="95sp"
            android:layout_height="50sp"
            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_marginTop="30sp"
            android:text="Masuk" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/kel3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/h1"
        android:background="@drawable/selector3">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/lyuscrol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#365561"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sc1"
                    android:layout_width="120sp"
                    android:layout_height="85sp"
                    android:layout_marginLeft="10sp"

                    android:src="@drawable/d1" />

                <ImageView
                    android:id="@+id/sc2"
                    android:layout_width="120sp"
                    android:layout_height="85sp"
                    android:layout_marginLeft="10sp"

                    android:src="@drawable/d2" />

                <ImageView
                    android:id="@+id/sc3"
                    android:layout_width="120sp"
                    android:layout_height="85sp"
                    android:layout_marginLeft="10sp"

                    android:src="@drawable/d3" />
                <ImageView
                    android:id="@+id/sc4"
                    android:layout_width="120sp"
                    android:layout_height="85sp"
                    android:layout_marginLeft="10sp"

                    android:src="@drawable/d1" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/kel4"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/kel3"
        android:background="@drawable/selector3">

    <ImageView
        android:id="@+id/g1"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="5dp"
        android:src="@drawable/d4"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUBGM UC CODE"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/g1"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>